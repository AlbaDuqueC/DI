import {Departamento} from "../../entities/Departamento"

interface IDepartamentoRepository {
  getListaDepartamentos(): Promise<Departamento[]>;
  getDepartamentoPorId(id: number): Promise<Departamento | null>;
  crearDepartamento(departamento: Departamento): Promise<number>;
  actualizarDepartamento(id: number, departamento: Departamento): Promise<number>;
  eliminarDepartamento(id: number): Promise<number>;
  contarPersonasDepartamento(id: number): Promise<number>;
}
